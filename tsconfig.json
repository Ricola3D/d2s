{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "exclude": [ 
    "coverage",
    "test",
    "lib",
    "dist",
    "scripts",
    "public", // Because of "allowJS" it must be excluded
    "webpack.config.js" // Because of "allowJS" it must be excluded
  ]
}
